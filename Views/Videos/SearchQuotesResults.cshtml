@model List<string>

@{
    ViewData["Title"] = "Select a Quote";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mb-4">
                <h2 class="font-weight-bold text-dark">@ViewData["Title"]</h2>
                <p class="text-secondary">Choose a quote below to overlay on the video.</p>
            </div>
            @if (Model != null && Model.Any())
            {
                <div class="list-group">
                    @foreach (var quote in Model)
                    {
                        <form asp-action="DisplayVideo" method="post" class="mb-2">
                            <input type="hidden" name="selectedQuote" value="@quote" />
                            <div class="list-group-item list-group-item-light shadow-sm">
                                <div class="text-dark">
                                    @quote
                                </div>
                                <div class="text-right mt-2">
                                    <button type="submit" class="btn btn-sm btn-primary">Generate Video</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    <p>No quotes found for the given prompt.</p>
                </div>
            }
        </div>
    </div>
</div>
