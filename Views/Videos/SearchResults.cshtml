@{
    ViewData["Title"] = "Search Results";
    var videoModels = Model as List<VideoGenerator.Models.VideoViewModel>;
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="font-weight-bold text-dark">@ViewData["Title"]</h2>
        <p class="text-secondary">Explore the videos related to your selected quote.</p>
    </div>

    @if (videoModels != null && videoModels.Any())
    {
        <div class="row">
            @foreach (var video in videoModels)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0">
                        <video controls class="card-img-top video-fixed-size" poster="@video.ThumbnailUrl">
                            <source src="@video.Url" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                        <div class="card-body text-center">
                            <a href="@video.VideoDownloadUrl" class="btn btn-dark btn-sm" download>Download</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <p>No videos found for the given quote.</p>
        </div>
    }
</div>

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .video-fixed-size {
        width: 100%;
        height: 200px;
        object-fit: cover; 
    }

    .btn-dark {
        background-color: #343a40;
        border-color: #343a40;
    }

        .btn-dark:hover {
            background-color: #23272b;
            border-color: #1d2124;
        }

    .alert {
        border-radius: 10px;
    }
</style>
